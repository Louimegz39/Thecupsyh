while true do
    local Descendants = workspace:GetDescendants()
 
    for i, value in pairs(Descendants) do
        if value.Name == "Important" then
            local cups = value:GetDescendants()
            for i, e in pairs (cups) do
                if e.Name == "Detail" then
                local v = e.Parent.Parent
                  v["1"].Detail.BrickColor = BrickColor.new("Bright red") 
                  v["2"].Detail.BrickColor = BrickColor.new("Bright blue") 
                  v["3"].Detail.BrickColor = BrickColor.new("Light yellow") 
                  v["4"].Detail.BrickColor = BrickColor.new("Bright green") 
                  v["5"].Detail.BrickColor = BrickColor.new("Bright violet") 
                  v["1"].Primary.BrickColor = BrickColor.new("Bright red") 
                  v["2"].Primary.BrickColor = BrickColor.new("Bright blue") 
                  v["3"].Primary.BrickColor = BrickColor.new("Light yellow") 
                  v["4"].Primary.BrickColor = BrickColor.new("Bright green") 
                  v["5"].Primary.BrickColor = BrickColor.new("Bright violet") 
                end
            end
        end
     end  
  
  
  wait(0.01)
end
